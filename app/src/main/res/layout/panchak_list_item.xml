<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/panchak_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tithi"
                android:textColor="@color/black"
                android:textSize="@dimen/panchang_val_size" />

            <TextView
                android:id="@+id/panchak_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tithi"
                android:textColor="@color/heading_text_color"
                android:textSize="@dimen/panchang_val_size" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/panchak_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tithi"
                android:textColor="@color/black"
                android:textSize="@dimen/panchang_time_size" />

            <TextView
                android:id="@+id/panchak_end_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tithi"
                android:textColor="@color/heading_text_color"
                android:textSize="@dimen/panchang_time_size" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/line_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color" />
</LinearLayout>