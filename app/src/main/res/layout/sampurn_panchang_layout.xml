    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/shubh_muhurat"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:elevation="0dp"
        android:minWidth="200dp"
        app:cardBackgroundColor="@color/shubh_muhurat_bg_color"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/abhijit_muhurat_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tithi"
                android:textColor="@color/black"
                android:textSize="@dimen/panchang_val_size" />

            <TextView
                android:id="@+id/abhijit_muhurat_duration_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tithi"
                android:textColor="@color/heading_text_color"
                android:textSize="@dimen/panchang_val_size" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/ashubh_muhurat"
        android:textColor="@color/black"
        android:textSize="16sp" />

