                        android:layout_below="@+id/purnimant_tv"
                        android:textColor="@color/black"
                        android:textSize="@dimen/panchang_val_size" />


                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/saksamvat_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shaka_samvat"
                        android:textColor="@color/heading_text_color"
                        android:textSize="@dimen/panchang_label_size" />

                    <TextView
                        android:id="@+id/saksamvat_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/saksamvat_tv"
                        android:textColor="@color/black"
                        android:textSize="@dimen/panchang_val_size" />


                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider_color" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/kalisamvat_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kali_samvat"
                        android:textColor="@color/heading_text_color"
                        android:textSize="@dimen/panchang_label_size" />

                    <TextView
                        android:id="@+id/kalisamvat_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/kalisamvat_tv"
                        android:textColor="@color/black"
                        android:textSize="@dimen/panchang_val_size" />


                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/vikramsamvat_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vikram_samvat"
                        android:textColor="@color/heading_text_color"
                        android:textSize="@dimen/panchang_label_size" />

                    <TextView
                        android:id="@+id/vikramsamvat_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/vikramsamvat_tv"
                        android:textColor="@color/black"
                        android:textSize="@dimen/panchang_val_size" />


                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider_color" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/day_duration_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
