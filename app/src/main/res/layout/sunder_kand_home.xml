<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/sunder_kaand"
            android:textColor="@color/black"
            android:textSize="@dimen/heading_text_size" />

        <TextView
            android:id="@+id/heading_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/panchan_shopan_manglacharan"
            android:textColor="@color/black"
            android:textSize="@dimen/sub_heading_text_size" />

        <TextView
            android:id="@+id/sub_heading_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/slok"
            android:textColor="@color/black"
            android:textSize="@dimen/sub_heading_text_size" />

        <TextView
            android:id="@+id/shlok1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/content_text_size" />

        <TextView
            android:id="@+id/shlok_meaning1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="@color/red"
            android:textSize="@dimen/content_text_size" />

        <TextView
            android:id="@+id/shlok2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/content_text_size" />

        <TextView
            android:id="@+id/shlok_meaning2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="@color/red"
            android:textSize="@dimen/content_text_size" />

        <TextView
            android:id="@+id/shlok3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/content_text_size" />

        <TextView
            android:id="@+id/shlok_meaning3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="@color/red"
            android:layout_marginBottom="40dp"

            android:textSize="@dimen/content_text_size" />
    </LinearLayout>
</ScrollView>