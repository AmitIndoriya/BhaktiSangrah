<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/DarkGrayColor" />
            <stroke android:width="1dp" android:color="@color/DarkGrayColor" />
            <corners android:topLeftRadius="5dp" android:topRightRadius="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/DarkGrayColor" android:startColor="@color/DarkGrayColor" />
            <stroke android:width="1dp" android:color="@color/DarkGrayColor" />
            <corners android:topLeftRadius="5dp" android:topRightRadius="5dp" />
        </shape>
    </item>
</selector>